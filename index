        // Mostrar sector
        function showSector(sectorId) {
            // Ocultar todos los sectores
            document.querySelectorAll('.products-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Quitar active de todos los botones
            document.querySelectorAll('.sector-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Mostrar sector seleccionado
            document.getElementById(sectorId).classList.add('active');
            document.getElementById('btn-' + sectorId).classList.add('active');
        }

        // Cambiar cantidad
        function changeQty(productId, change) {
            const qtyElement = document.getElementById('qty-' + productId);
            let currentQty = parseInt(qtyElement.textContent) || 0;
            let newQty = Math.max(0, currentQty + change);
            
            qtyElement.textContent = newQty;
            
            if (newQty > 0) {
                cart[productId] = newQty;
            } else {
                delete cart[productId];
            }
            
            updateCart();
        }

        // Actualizar carrito
        function updateCart() {
            total = 0;
            let itemCount = 0;
            
            for (let productId in cart) {
                if (products[productId]) {
                    total += products[productId].price * cart[productId];
                    itemCount += cart[productId];
                }
            }
            
            // Formatear precio con separadores de miles
            document.getElementById('cart-total').textContent = `Total: ${total.toLocaleString('es-AR')}`;
            
            const cartSummary = document.getElementById('cart-summary');
            if (itemCount > 0) {
                cartSummary.classList.add('active');
            } else {
                cartSummary.classList.remove('active');
                hideCustomerForm();
            }
        }

        // Limpiar carrito
        function clearCart() {
            cart = {};
            total = 0;
            
            // Resetear todas las cantidades a 0
            document.querySelectorAll('.qty-display').forEach(element => {
                element.textContent = '0';
            });
            
            updateCart();
        }

        // Mostrar formulario de cliente
        function showCustomerForm() {
            if (Object.keys(cart).length === 0) {
                alert('⚠️ Primero agrega productos a tu carrito');
                return;
            }
            
            document.getElementById('customer-form').classList.add('active');
            document.getElementById('form-overlay').classList.add('active');
            document.getElementById('customer-name').focus();
        }

        // Ocultar formulario de cliente
        function hideCustomerForm() {
            document.getElementById('customer-form').classList.remove('active');
            document.getElementById('form-overlay').classList.remove('active');
        }

        // NUEVA FUNCIÓN: Seleccionar medio de pago
        function selectPayment(paymentType) {
            // Quitar selección anterior
            document.querySelectorAll('.payment-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Seleccionar nuevo medio de pago
            document.querySelector(`#payment-${paymentType}`).checked = true;
            document.querySelector(`#payment-${paymentType}`).closest('.payment-option').classList.add('selected');
            
            selectedPayment = paymentType;
            
            // Mostrar/ocultar detalles de transferencia
            const transferDetails = document.getElementById('transfer-details');
            if (paymentType === 'transferencia') {
                transferDetails.classList.add('show');
            } else {
                transferDetails.classList.remove('show');
            }
        }

        // FUNCIÓN ACTUALIZADA: Enviar pedido por WhatsApp
        function sendWhatsAppOrder() {
            // Validar formulario
            const name = document.getElementById('customer-name').value.trim();
            const phone = document.getElementById('customer-phone').value.trim();
            const address = document.getElementById('customer-address').value.trim();
            const comments = document.getElementById('customer-comments').value.trim();
            
            if (!name || !phone || !address) {
                alert('⚠️ Por favor completa todos los campos obligatorios');
                return;
            }
            
            if (!selectedPayment) {
                alert('⚠️ Por favor selecciona un medio de pago');
                return;
            }
            
            if (Object.keys(cart).length === 0) {
                alert('⚠️ Tu carrito está vacío');
                return;
            }
            
            // Crear mensaje de WhatsApp
            let message = `🛒 *NUEVO PEDIDO - LA PERUANA SRL*\n\n`;
            message += `👤 *Cliente:* ${name}\n`;
            message += `📱 *Teléfono:* ${phone}\n`;
            message += `📍 *Dirección:* ${address}\n\n`;
            message += `📋 *PEDIDO:*\n`;
            message += `━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
            
            // Agregar productos del carrito
            for (let productId in cart) {
                if (products[productId]) {
                    const product = products[productId];
                    const qty = cart[productId];
                    const subtotal = (product.price * qty);
                    
                    message += `• ${product.name}\n`;
                    message += `  ${qty} ${product.unit}(s) × ${product.price.toLocaleString('es-AR')} = ${subtotal.toLocaleString('es-AR')}\n\n`;
                }
            }
            
            message += `━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
            message += `💰 *TOTAL: ${total.toLocaleString('es-AR')}*\n\n`;
            
            // Agregar medio de pago
            message += `💳 *MEDIO DE PAGO:*\n`;
            switch(selectedPayment) {
                case 'mercadopago':
                    message += `📱 *Mercado Pago* - Pago digital\n\n`;
                    break;
                case 'transferencia':
                    message += `🏦 *Transferencia Bancaria*\n`;
                    message += `📋 Alias: *laperuanasrl*\n`;
                    message += `⚠️ Recordá enviar el comprobante\n\n`;
                    break;
                case 'efectivo':
                    message += `💵 *Efectivo* - Pago al recibir\n\n`;
                    break;
            }
            
            if (comments) {
                message += `💬 *Comentarios:*\n${comments}\n\n`;
            }
            
            message += `⏰ Fecha: ${new Date().toLocaleString('es-AR')}\n`;
            message += `🤖 Pedido generado automáticamente`;
            
            // Codificar mensaje para URL
            const encodedMessage = encodeURIComponent(message);
            
            // Crear URL de WhatsApp
            const whatsappURL = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodedMessage}`;
            
            // Abrir WhatsApp
            window.open(whatsappURL, '_blank');
            
            // Mostrar confirmación
            alert('✅ ¡Pedido enviado! Se abrirá WhatsApp para confirmar.');
            
            // Ocultar formulario
            hideCustomerForm();
            
            // Limpiar formulario (opcional)
            setTimeout(() => {
                if (confirm('¿Quieres limpiar el carrito para un nuevo pedido?')) {
                    clearCart();
                    document.getElementById('customer-name').value = '';
                    document.getElementById('customer-phone').value = '';
                    document.getElementById('customer-address').value = '';
                    document.getElementById('customer-comments').value = '';
                    
                    // Limpiar selección de pago
                    selectedPayment = '';
                    document.querySelectorAll('.payment-option').forEach(option => {
                        option.classList.remove('selected');
                    });
                    document.querySelectorAll('input[name="payment"]').forEach(radio => {
                        radio.checked = false;
                    });
                    document.getElementById('transfer-details').classList.remove('show');
                }
            }, 2000);
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            // Mostrar rotisería por defecto
            showSector('rotiseria');
        });
    </script>
</body>

</html>

